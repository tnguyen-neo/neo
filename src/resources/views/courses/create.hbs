<div class="mt-4">
  <h3>Tạo khoá học mới</h3>

  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name" class="form-label">Tên khoá học</label>
      <input class="form-control" id="name" name="name" />
    </div>

    <div class="form-group">
      <label for="description" class="form-label">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      ></textarea>
    </div>

    <div class="form-group">
      <label for="videoId" class="form-label">Video ID</label>
      <input class="form-control" id="videoId" name="videoId" />
    </div>

    <div class="form-group">
      <label for="level" class="form-label">Trình độ</label>
      <input class="form-control" id="level" name="level" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Tạo mới</button>
  </form>
</div>